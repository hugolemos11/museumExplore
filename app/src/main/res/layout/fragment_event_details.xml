<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.EventDetailsFragment">

    <ImageView
        android:id="@+id/imageViewEventDetails"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEventTitleDetails"
        style="@style/Theme.DescriptionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@+id/imageViewEventDetails"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEventDetails" />

    <TextView
        android:id="@+id/textViewEventDescriptionDetails"
        style="@style/Theme.Description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewEventDetails"
        app:layout_constraintStart_toStartOf="@+id/textViewEventTitleDetails"
        app:layout_constraintTop_toBottomOf="@+id/textViewEventTitleDetails" />
</androidx.constraintlayout.widget.ConstraintLayout>