<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.museumexplore.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_museumDetailsFragment"
            app:destination="@id/navigation_museum_details"/>
    </fragment>

    <fragment
        android:id="@+id/navigation_museum_details"
        android:name="com.example.museumexplore.ui.home.MuseumDetailsFragment"
        android:label="Museum Details"
        tools:layout="@layout/fragment_museum_details" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.museumexplore.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />


</navigation>